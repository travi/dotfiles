[github]
    user = travi

[init]
    templatedir = ~/.git_template

[diff]
    renames = copy
    tool = p4mergetool
    compactionHeuristic = true

[merge]
    tool = p4mergetool

[rerere]
    enabled = true

[color]
    ui = true

[color "status"]
    branch = yellow bold
    header = cyan
    added = green
    changed = red
    untracked = magenta

[color "branch"]
    current = green
    local = cyan
    remote = magenta

[color "diff"]
    meta = yellow bold
    whitespace = red reverse

[log]
    showSignature = true

[core]
    autocrlf = input
    longpaths = true
    whitespace=fix,tab-in-indent,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore

[push]
    # Git 1.x default to work on legacy machines (pre-v1.8)
    # use `simple` in .gitconfig.extra on machines with newer git installed
    default = matching
    followTags = true

[branch]
    autorebase = always

[alias]
    st = status
    rb = rebase
    df = diff
    dc = diff --cached
    co = checkout
    cb = checkout -b
    pop = stash pop
    amend = commit -a --amend --no-edit
    force = push --force-with-lease

    out = log --pretty=oneline --abbrev-commit --graph @{u}..
    in = !git fetch && git log --pretty=oneline --abbrev-commit --graph ..@{u}
    undo = reset --hard
    ignored = ls-files -o -i --exclude-standard

    # Log formats
    lg = log -20 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %an)%Creset' --abbrev-commit --date=relative
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v

    # Stage and print status
    # Defaults to stage all, but only if nothing else is staged
    ad = "!f() { if [ ! -z \"$1\" ] || git diff --cached --quiet; then git add -A \"$@\" && git status; else echo \"Staging prevented\"; return 8; fi }; f"

    # Remove branches that have already been merged with master
    # a.k.a. ‘delete merged’
    dm = "!git branch --merged master | grep -v '\\master' | xargs -n 1 git branch -d"

    # Clean Slate
    cs = "!git co master && git pull --rebase --prune && git dm && git remote prune origin && git submodule update --init --recursive"

    # alternative to `git reset --hard` that maintains a (non-simple) way to recover the changes
    # from http://haacked.com/archive/2014/07/28/github-flow-aliases/
    wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard

    # List contributors with number of commits
    contributors = shortlog --summary --numbered

    # edit config
    ec = config --global -e

    aliases = config --get-regexp alias

[rebase]
    autosquash = true

[include]
    path = ~/.gitconfig.extra
    path = ~/.gitconfig.os
